<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewCard"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/icono_splash_foreground"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TitleCard"
            android:text="@string/Title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/GreenU1"
            android:layout_toRightOf="@id/imageViewCard"
            android:layout_toEndOf="@id/imageViewCard"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DescriptionCard"
            android:text="@string/Description"
            android:textSize="15dp"
            android:textColor="@color/GreenU"
            android:layout_toRightOf="@id/imageViewCard"
            android:layout_toEndOf="@id/imageViewCard"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/TitleCard">
        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>